# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout.
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.txt text eol=lf
*.py text eol=lf
*.sh text eol=lf
*.sql text eol=lf
*.xml text eol=lf
*.svg text eol=lf

# Denote all files that are truly binary and should not be modified.
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
*.mp4 binary
*.mp3 binary
*.mov binary
*.avi binary

# Python specific
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.egg binary
*.egg-info binary

# Node.js / npm
package-lock.json text eol=lf
yarn.lock text eol=lf
pnpm-lock.yaml text eol=lf

# Git files
*.gitignore text eol=lf
*.gitattributes text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

